# Knight's Corner (KNC) node testing only the MIC and not the host

ERT_RESULTS Results.babbage.nersc.gov.02

ERT_DRIVER  driver1
ERT_KERNEL  kernel1

ERT_MPI         True
ERT_MPI_CFLAGS  
ERT_MPI_LDFLAGS 

ERT_OPENMP         True
ERT_OPENMP_CFLAGS  -openmp
ERT_OPENMP_LDFLAGS -openmp

ERT_FLOPS   1,2,4,8,16,32,64,128,256,512
ERT_ALIGN   64

ERT_CC      mpiicpc
ERT_CFLAGS  -O3 -mmic -fno-alias -fno-fnalias -DERT_INTEL

ERT_LD      mpiicpc
ERT_LDFLAGS -mmic
ERT_LDLIBS

ERT_PRECISION FP64

ERT_RUN     export OMP_NUM_THREADS=ERT_OPENMP_THREADS; get_micfile; mpirun.mic -n ERT_MPI_PROCS -ppn 1 -hostfile micfile.$SLURM_JOB_ID ERT_CODE

ERT_PROCS_THREADS  60,120,240
ERT_MPI_PROCS      1
ERT_OPENMP_THREADS 60,120,240

ERT_NUM_EXPERIMENTS 3

ERT_MEMORY_MAX 1073741824

ERT_WORKING_SET_MIN 1

ERT_TRIALS_MIN 1

ERT_GNUPLOT gnuplot
